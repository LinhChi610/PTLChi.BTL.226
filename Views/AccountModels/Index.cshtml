@model IEnumerable<PTLChi.BTL._226.Models.AccountModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Tài khoản", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id = item.Username }) |
                @Html.ActionLink("Thông Tin Chi Tiết", "Details", new { id = item.Username }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.Username })
            </td>
        </tr>
    }

</table>
