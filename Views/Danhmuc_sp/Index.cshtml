@model IEnumerable<PTLChi.BTL._226.Models.Danhmuc_sp>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Mục Sản Phẩm</h2>

<p>
    @Html.ActionLink("Thêm Mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ten_Danhmuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Ten_Danhmuc)
        </td>
        <td>
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Thông Tin Chi Tiết |", "Details", new { id = item.ID_Danhmuc })
                @Html.ActionLink("Sửa |", "Edit", new { id = item.ID_Danhmuc })
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Danhmuc })
            }
            else
            {
                @Html.ActionLink("Thông Tin Chi Tiết ", "Details", new { id = item.ID_Danhmuc })

            }            
        </td>
    </tr>
}

</table>
