            @Html.DisplayNameFor(model => model.Bao_hanh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gia_khuyen_mai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Batdau_km)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ketthuc_km)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID_Danhmuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ten_Sanpham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anh_Sanpham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia_Sanpham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.So_luong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kich_thuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mau_sac)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bo_nho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bao_hanh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gia_khuyen_mai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Batdau_km)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ketthuc_km)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Thông Tin Chi Tiết |", "Details", new { id = item.ID_Sanpham }) 
                    @Html.ActionLink("Sửa", "Edit |", new { id = item.ID_Sanpham })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ID_Sanpham })
                }
                else
                {
                @Html.ActionLink("Thông Tin Chi Tiết", "Details", new { id = item.ID_Sanpham })

                }
            </td>
        </tr>
    }

</table>
